<div class="container">

  <div class="row">
    <div class="col-md-4">
      <% current_user.email %>
    </div>

    <div class="col-md-8">
      <table class="table">
        <thead class="head-inverse">
          <tr>
            <th>User</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>
  
        <tbody>
          <% @tweets.each do |tweet| %>
          <tr>
            <td> <%= tweet.user %> </td>
            <td> <%= tweet.content %> </td>
            <td> <%= link_to "Show", tweet %> </td>
            <% if tweet.user == current_user %>
            <td> <%= link_to "Edit", edit_tweet_path(tweet) %> </td>
            <td> 
            <%= link_to "Delete", tweet, method: :delete, data: { confirm: "Are you sure?" } %> </td>
            <%end%>
          </tr>
          <% end %>
        </tbody>
      </table>
  
      <br>
  
      <% if user_signed_in? %>
        <% link_to "New tweet", new_tweet_path %>
  
      <% end %>
    </div>

  </div>

</div>