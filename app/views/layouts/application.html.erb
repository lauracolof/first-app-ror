<!DOCTYPE html>
<html>
  <head>
    <title>Quotes rock band project</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
  <%# Navigation bar %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "One Month Rails", root_path, class: "navbar-brand" %>
          <ul class="nav navbar-nav">
            <li class='nav-item bg-black'>
              <%= link_to "Home", 
                  root_path, 
                  class: "nav-link" 
              %></li>
            <li class="nav-item">
              <%= link_to "About", 
                  about_path, 
                  class: "nav-link" 
              %></li>
            <% if user_signed_in? %>
              <li class="nav-item pull-md-right"> 
                <%= 
                  link_to "Log out", 
                  signout_path, 
                  method: :delete, 
                  class: "nav-link" %> 
              </li>
            <% else %> 
              <li class="nav-item pull-md-right"> 
                <%= link_to "Sign up", signup_path, class: "nav-link btn btn-primary" %> 
              </li>
              <li class="nav-item pull-md-right"> 
                <%= link_to "Sign in", signin_path, class: "nav-link" %> 
              </li>
            <% end %>
          </ul>
      </div>
    </nav>

    <%# Flash messages %>
        <% flash.each do |name, message| %>
        <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
        <% end %>

    <%# Page content %>
    <%= yield %>

    <%# Footer %>
    <footer class='small text-muted'>
      <div class='container'>
        <hr>
        <center>
          <p>2023 One Month</p>
        </center>
      </div>
    </footer>
  
  </body>
</html>
